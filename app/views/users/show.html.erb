<div class="container py-3">
  <%=link_to '< Back to Users', users_url, class: 'title-link' %>

  <div class="card shadow user-card">
    <div class="card-body p-2">
      <img src="<%=@user.photo || image_url('empty_user.png') %>" alt="<%=@user.name %>" title="<%=@user.name %>" class="user-image user-image-profile" />
      <h3 class="card-title"><%=@user.name %></h3>
      <hr class="mt-4" />
      <h5 class="card-title">Bio</h5>
      <p class="card-text"><%=@user.bio %></p> 
    </div>
  </div>

  <h5 class="my-3">Posts (<%=@user.posts_counter %>)</h5>

  <% @user.last_three_posts.each do |post| %>
    <div class="card shadow mb-3">
      <div class="card-body p-2">
        <h5 class="card-title m-0 p-0 fw-bold"><a href="/users/<%=@user.id %>/posts/<%=post.id %>" class="title-link"><%=post.title %></a></h5>
        <p class="card-text m-0 p-0"><%=post.text[0...100] %>...</p>
        <p class="card-text text-secondary fst-italic text-end">Comments: <%=post.comments_counter %> | Likes: <%=post.likes_counter %></p>
      </div>
    </div>   
  <% end %>

  <div class="text-center mt-5">
    <a href="/users/<%=@user.id %>/posts" class="btn btn-outline-dark" role="button">See All Posts</a>
  </div>
</div>
